set(BRT_OS_EMSCRIPTEN OFF)
set(BRT_OS_ANDROID OFF)
set(BRT_OS_LINUX OFF)
set(BRT_OS_MACOS OFF)
set(BRT_OS_IOS OFF)
set(BRT_OS_WINDOWS OFF)

set(BRT_ARCH_X64 OFF)
set(BRT_ARCH_ARM OFF)

if (BRT_OS_EMSCRIPTEN)
  set(BRT_OS_EMSCRIPTEN ON)
elseif (ANDROID)
  set(BRT_OS_ANDROID ON)
elseif (CMAKE_SYSTEM_NAME STREQUAL "Linux")
  set(BRT_OS_LINUX ON)
elseif (IOS)
  set(BRT_OS_IOS ON)
elseif (APPLE)
  set(BRT_OS_MACOS ON)
elseif (CMAKE_SYSTEM_NAME STREQUAL "Windows")
  set(BRT_OS_WINDOWS ON)
endif ()

if (NOT BRT_OS_EMSCRIPTEN)
  if (CMAKE_SYSTEM_PROCESSOR STREQUAL "x86_64")
    set(BRT_ARCH_X64 ON)
  elseif (CMAKE_SYSTEM_PROCESSOR STREQUAL "arm")
    set(BRT_ARCH_ARM ON)
  endif ()
endif()
